      <div class="d-flex align-items-center justify-content-around flex-wrap mb-5">
        <% posts.each do |post| %>
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_post_image, size:'150x100' %>
            <p>タイトル：<%= post.title %></p>
            <p>ジャンル:<%= post.genre.name %> </p>
            <p>お名前：<%= post.child.name %></p>
            <p>年齢：</p>
            <p>投稿者：<%= post.user.name %></p>
            <p>投稿日時：<%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></p>
            <p>公開範囲：<%= Post.public_statuses_i18n[Post.public_statuses.key(post.public_status)] %></p>
          <% end %>
        <% end %>
      </div>