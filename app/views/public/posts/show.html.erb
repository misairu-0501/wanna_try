<div class = "container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="alert alert-warning">投稿詳細</h2>
      <table class="table">
        <tr>
          <th>タイトル</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th>お名前</th>
          <td><%= @post.child.name %></td>
        </tr>
        <tr>
          <th>お年</th>
          <td></td>
        </tr>
        <tr>
          <th>投稿者</th>
          <td><%= @post.user.name %></td>
        </tr>
        <tr>
          <th>投稿日時</th>
          <td><%= @post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
        </tr>
        <tr>
          <th>公開範囲</th>
          <td><%= Post.public_statuses_i18n[Post.public_statuses.key(@post.public_status)] %></td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= @post.body %></td>
        </tr>
      </table>

      <% if @post.user == current_user %>
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-main" %>
        <%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= image_tag @post.get_post_image, size:'600x400' %>
      <!--コメント-->
      <span><%= @post.post_comments.count %>コメント</span>

      <span>|</span>

      <!--いいね-->
      <% if @post.favorited_by?(current_user) %>
        <span>
          <%= link_to post_favorites_path(@post), method: :delete do %>
            ♥<%= @post.favorites.count %>いいね
          <% end %>
        </span>
      <% else %>
        <span>
          <%= link_to post_favorites_path(@post), method: :post do %>
            ♡<%= @post.favorites.count %>いいね
          <% end %>
        </span>
      <% end %>
    </div>

  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-3 alert alert-warning">コメント</h2>
      <% @post.post_comments.each do |post_comment| %>
        <%= post_comment.user.name %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        <%= post_comment.comment %>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-outline-danger" %><br>
        <% end %>
      <% end %>

      <%= form_with model: [@post, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control" %><br>
        <%= f.submit "送信する", class: "btn btn-main"  %>
      <% end %>
    </div>
  </div>
</div>