<div class = "container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/posts/genre_search', genres: @genres %>
    </div>
    <div class="col-md-10">
      <% if params[:id] %>
        <h2>「<%= @genre.name %>」投稿一覧（全<%= @posts.count%>件）</h2>
      <% elsif params[:latest] %>
        <h2>投稿一覧（全<%= @posts.count%>件）"新着順"</h2>
      <% elsif params[:old] %>
        <h2>投稿一覧（全<%= @posts.count%>件）"古い順"</h2>
      <% elsif params[:favorite_count] %>
        <h2>投稿一覧（全<%= @posts.count%>件）"いいね数順"</h2>
      <% else %>
        <h2>投稿一覧（全<%= @posts.count%>件）</h2>
      <% end %>
      <div class="mb-3">
        <span>並び順</span>|
        <%= link_to "新着", posts_path(latest: "true") %>|
        <%= link_to "古い", posts_path(old: "true") %>|
        <%= link_to "いいね数順", posts_path(favorite_count: "true") %><br>
      </div>
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>
</div>