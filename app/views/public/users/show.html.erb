<div class ="container">
  <div class="row">
    <div class="col-md-2">
      <h2>ユーザー</h2>
      <p>写真</p>
      <table class="table">
        <tr>
          <th>ニックネーム</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th></th>
        </tr>
      </table>
      <% if @user == current_user %>
        <%=link_to "マイページ", my_page_user_path(@user) %><br>
      <% end %>
      <%= link_to "投稿する", new_post_path %>
    </div>
    <div class="col-md-10">
      <h2>投稿一覧</h2>
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>
</div>

