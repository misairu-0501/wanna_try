<h2>マイページ</h2>
<table class="table table-bordered">
  <tr>
    <th>ニックネーム</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</td>
    <td><%= @user.email %></td>
  </tr>
</table>

<%= link_to "ユーザー編集", edit_user_path(@user) %>

<p class="mt-3">●お子さま一覧</p>
<table class="table table-bordered">
  <tr>
    <th>お名前</th>
    <th>生年月日</th>
    <th>性別</th>
    <th></th>
  </tr>
  <% @children.each do |child| %>
    <tr>
      <td><%= child.name %></th>
      <td><%= child.birthday.strftime("%Y/%m/%d") %></th>
      <td><%= Child.genders_i18n[child.gender] %></th>
      <td><%= link_to "編集", edit_child_path(child) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "お子様追加", new_child_path %>

<p class="mt-3">●所属グループ一覧</p>