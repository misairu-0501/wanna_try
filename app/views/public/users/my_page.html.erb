<div class="container">
  <h2>マイページ</h2>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="alert alert-warning">
        <%= link_to "投稿する", new_post_path, class: "btn btn-outline-main" %>
        <%= link_to "#{@user.name}さんの投稿一覧", user_path(@user), class: "btn btn-outline-main" %>
      </div>
      <h3 class="mt-3">●ご登録内容</h3>
      <table class="table table-bordered">
        <tr>
          <th class="table-heading">ニックネーム</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th  class="table-heading">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>

      <%= link_to "ユーザー編集", edit_user_path(@user), class: "btn btn-main" %>

      <h3 class="mt-3">●お子さま一覧</h3>
      <table class="table table-bordered">
        <tr>
          <th class="table-heading">お名前</th>
          <th class="table-heading">生年月日</th>
          <th class="table-heading">性別</th>
          <th class="table-heading"></th>
        </tr>
        <% @children.each do |child| %>
          <tr>
            <td><%= child.name %></th>
            <td><%= child.birthday.strftime("%Y/%m/%d") %></th>
            <td><%= Child.genders_i18n[child.gender] %></th>
            <td>
              <%= link_to "編集", edit_child_path(child), class: "btn btn-outline-main" %>
              <%= link_to "削除", child_path(child), method: :delete, data: {confirm: "お子さんに紐づいた投稿も消去されますが削除しますか？"}, class: "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </table>

      <%= link_to "お子様追加", new_child_path, class: "btn btn-main" %>

      <h3 class="mt-3">●所属グループ一覧</h3>
    </div>
  </div>
</div>