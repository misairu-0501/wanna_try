<h2>ユーザー情報編集画面</h2>

<div id="error">
  <%= render 'layouts/errors', obj: @user %>
</div>

<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label "ニックネーム" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "編集を保存する" %>
  </div>
<% end %>


