<table class="table">
  <% post.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to(post_comment.user) do %>
          <%= image_tag post_comment.user.get_profile_image, size:"50x50" %><br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%=safe_join(post_comment.comment.split("\n"),tag(:br))%></td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <% if post_comment.user == current_user %>
        <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-outline-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>