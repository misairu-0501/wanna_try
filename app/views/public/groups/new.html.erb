<div class="container">
  <h2 class="mt-3">グループ作成</h2>
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div id="error">
        <%= render 'layouts/errors', obj: @group %>
      </div>

      <%= form_with model: @group, url: groups_path, method: :post, local: true do |f| %>
        <table class="table table-responsive">
          <tr>
            <th><%= f.label :name, "グループ名" %></th>
            <td><%= f.text_field :name, placeholder: "グループ名を入力", class: "form-control" %></td>
          </tr>
        </table>
        <%= f.submit "グループを作成する", class: "btn btn-main" %>
        <%= link_to "マイページへ戻る", my_page_user_path(current_user), class: "d-flex justify-content-end" %>
      <% end %>
    </div>
  </div>
</div>

