<div class="container">
  <h2 class="mt-3">管理者ログイン</h2>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field mt-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions mt-3 d-flex justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-main btn-block" %>
        </div>
      <% end %>

      <%#= render "admin/shared/links" %>
    </div>
  </div>
</div>