<div class="container">
  <h2>カテゴリ一覧・追加</h2>
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div id="error">
        <%= render 'layouts/errors', obj: @genre %>
      </div>

      <div class="alert alert-warning">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
         <table>
           <tr>
             <td nowrap><%= f.label :name, "ジャンル名", class: "mr-3" %></td>
             <td><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></td>
             <td><%= f.submit "登録", class: "btn btn-main" %></td>
           </tr>
         </table>
        <% end %>
      </div>

      <table class="table">
        <thead class="table-heading">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-main" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>