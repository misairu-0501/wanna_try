<div class="container">
  <div class="mt-3">
    <% if params[:positive] %>
      <h2>投稿一覧（全<%= @posts.total_count %>件）"スコア高い順"</h2>
    <% elsif params[:negative] %>
      <h2>投稿一覧（全<%= @posts.total_count %>件）"スコア低い順"</h2>
    <% else %>
      <h2>投稿一覧（全<%= @posts.total_count %>件）</h2>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="mb-3">
        <span>感情分析スコア順</span>|
        <%= link_to "高い", admin_posts_path(positive: "true") %>|
        <%= link_to "低い", admin_posts_path(negative: "true") %>
      </div>
      <%= render 'admin/posts/index', posts: @posts %>
    </div>
  </div>
</div>