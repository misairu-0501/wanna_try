<div class = "container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="alert alert-warning mt-3">投稿詳細</h2>
      <%= render 'public/posts/show', post: @post %>
      <%= link_to "削除", admin_post_path(@post), method: :delete, data: {confirm: "投稿を削除しますか？"}, class: "btn btn-danger" %>
    </div>
    <div class="col-md-6">
      <div class="mt-3">
        <img><%= image_tag @post.get_post_image, width: "500px", height: "auto", class: "img-fluid" %></img><br>
      </div>
      <!--いいね-->
      <span class="text-danger">
        ♥<%= @post.favorites.count %>
      </span>
      <span>|</span>
      <!--コメント数(非同期通信化)-->
      <span id="number_of_post_comments">
        <%= render 'public/post_comments/number_of_comments', post: @post %>
      </span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-3 alert alert-warning">コメント</h2>
      <!--コメント一覧(非同期通信化)-->
      <div id="post_comments">
        <%= render 'admin/post_comments/index', post: @post %>
      </div>
    </div>
  </div>
</div>