<div class="container">
  <h2 class="mt-3"><%= @user.name %>さんの会員詳細</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table table-bordered">
        <tr>
          <th class="table-heading">会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th class="table-heading">ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="table-heading">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="table-heading">会員ステータス</th>
          <% if @user.is_deleted == false %>
            <td><strong class="text-success">有効</strong></td>
          <% else %>
            <td><strong class="text-danger">停止中</strong></td>
          <% end %>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-main" %>
      <%= link_to "退会させる", admin_user_path(@user), method: :delete, data: { confirm: "#{@user.name}さんを退会させますか？"} , class: "btn btn-danger" %>
    </div>
  </div>
</div>